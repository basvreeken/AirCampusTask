<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AirCampusTask.Views.LearningTaskView"
             Title="New Learning Task">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Command="{Binding Save}"/>
    </ContentPage.ToolbarItems>
    
    <StackLayout Padding="14">
        <Label Text="Title" />
        <Entry Text="{Binding LearningTask.Title}"/>
        <Label Text="Instruction" />
        <Editor Text="{Binding LearningTask.Instruction}"/>
        <DatePicker Date="{Binding LearningTask.Due}"/>
        <StackLayout Orientation="Horizontal">
            <Switch IsToggled="{Binding LearningTask.Completed}"/>
            <Label Text="Completed" />
        </StackLayout>
    </StackLayout>
</ContentPage>